/**index.wxss**/
page{
  background: #f4f4f4
}
.box {
  width: 100%;
  height: 400rpx;
  background: #61b9aa;
  border: 1rpx solid #61b9aa;
}

.image1 {
  width: 80%;
  height: 200rpx;
  margin: 14rpx auto;
  display: block;
}

.box2 {
  width: 100%;
  height: 100%;
  background: #f4f4f4;
  border: 1px solid #f4f4f4;
  position: relative;
}

.image2 {
  width: 160%;
  height: 62rpx;
  z-index: 99;
  opacity: 0.8;
  animation: bo 3s linear infinite;
  animation-direction: alternate;
  position: absolute;
  top: 350rpx;
}

.fu {
  width: 160%;
  height: 62rpx;
  display: block;
  opacity: 0.7;
  z-index: 99;
  animation: bofu 3s linear infinite;
  animation-direction: alternate;
  position: absolute;
  top: 350rpx;
}

.but1 {
  width: 60%;
  background: #61b9aa;
  height: 100rpx;
  color: white;
  line-height: 100rpx;
  border-radius: 20px;
}

.image3 {
  width: 100%;
  height: 260rpx;
  opacity: 1.8;
}

@-webkit-keyframes bo {
  from {
    transform: translate(-160px);
  }
  to {
    transform: translate(-1px);
  }
}

@-webkit-keyframes bofu {
  from {
    transform: translate(-1px);
  }
  to {
    transform: translate(-160px);
  }
}

.tou {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
  margin: auto;
  overflow: hidden;
  animation: aa 3s linear infinite;
  animation-direction: alternate;
  padding: 0;
}

@-webkit-keyframes aa {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(50deg);
  }
}
